extends layout

block content
  h1= title
  - let create = `dispatch(\"/Abiotic/create\")`
  button.btn(class="btn-primary ml-1", onclick=create) create
  - let items = results;
  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        //- - let destination = dispatch(\"/Abiotic/update?id=" $item._id\")
        - let destination = `dispatch(\"/Abiotic/update?id=${item._id}\")`
        - let deletes = `dispatch(\"/Abiotic/delete?id=${item._id}\")`
        - let details = `dispatch(\"/Abiotic/detail?id=${item._id}\")`
        div(class="row-sm-2 m-1") Item #{item.name}(#{item.type}) is #{item.cost}
        button.btn(class="btn-primary ml-1", onclick=destination) Update
        button.btn(class="btn-secondary ml-1", onclick=deletes) delete
        button.btn(class="btn-info ml-1", onclick=details) detail
  script.
    function dispatch(path){
      window.location.href = path;
    }


